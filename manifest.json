{
    "manifest_version":1,
    "type":"WebApp",
    "meta":{
        "name":"MCC",
        "version":"0.1.0",
        "minimum-overwolf-version":"0.77.10",
        "author":"Rdna123",
        "icon":"IconMouseOver.png",
        "icon_gray":"IconMouseNormal.png",
        "launcher_icon": "desktop-icon.ico",
        "description":"Easy colored messages in Minecraft."
    },
    "data": {
        "start_window":"MainWindow",
        "windows":{
            "MainWindow":{
                    "file":"index.js",
                    "transparent": false,
                    "resizable": true,
                    "use_os_windowing": true,
                    "size": {
                        "width":700,
                        "height":400
                        },
                    "min_size": {
                        "width":400,
                        "height":400
                    }
                }
        }
    }
}
